<div id="__next">
  <main>
    <section class="cart-area pt-100 pb-100">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h3 class="hero__title">
              <span class="yellow-shape"
                >Document Verification
                <img src="/img/shape/yellow-bg.png" alt="yellow-shape" /> </span
              >Document
            </h3>

            <div class="row">
              <div class="col-12">
                <div class="table-content table-responsive">
                  <table class="table">
                    <tbody class="tabeldetail">
                      <tr>
                        <td class="fw-bold">ID</td>
                        <td class=""><%= document._id %></td>
                      </tr>
                      <tr>
                        <td class="fw-bold">Filename</td>
                        <td><%= document.nm_document %></td>
                      </tr>

                      <tr>
                        <td class="fw-bold">Owner</td>
                        <td><%= document.id_user.name %></td>
                      </tr>
                      <tr>
                        <td class="fw-bold">Upload Date</td>
                        <td><%= document.timeCreated %></td>
                      </tr>
                    </tbody>
                  </table>
                  <br />
                  <p class="text-center">
                    It has been signed by the
                    <strong>D.Signature</strong> user as follows:
                  </p>
                  <h3 class="hero__title">
                    Signer
                  </h3>
                  <table class="table">
                    <tbody class="tabeldetail">
                      <tr>
                        <td class="fw-bold">Name</td>
                        <td class=""><%= signer.name %></td>
                      </tr>
                      <tr>
                        <td class="fw-bold">Email</td>
                        <td><%= signer.email %></td>
                      </tr>

                      <tr>
                        <td class="fw-bold">Signed Date</td>
                        <td><%= document.timeSigned %></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <br />
            <br />
            <h4 class="text-center">
              <i class="fa-solid fa-circle-check"></i> Verified and registered
              in the D.Sign system.
            </h4>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
